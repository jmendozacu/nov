<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Firstdataglobalgateway>
         <version>0.1.0</version>
      </Mage_Firstdataglobalgateway>
   </modules>
   <global>
      <models>
         <firstdataglobalgateway>
            <class>Mage_Firstdataglobalgateway_Model</class>
            <resourceModel>firstdataglobalgateway_mysql4</resourceModel>
         </firstdataglobalgateway>
         <firstdataglobalgateway_mysql4>
            <class>Mage_Firstdataglobalgateway_Model_Mysql4</class>
            <entities>
                <authorizenet_debug><table>firstdataglobalgateway_debug</table></authorizenet_debug>
            </entities>
         </firstdataglobalgateway_mysql4>
      </models>
      <resources>
         <firstdataglobalgateway_setup>
            <setup>
               <module>Mage_Firstdataglobalgateway</module>
            </setup>
            <connection>
               <use>core_setup</use>
            </connection>
         </firstdataglobalgateway_setup>
         <firstdataglobalgateway_write>
            <connection>
               <use>core_write</use>
            </connection>
         </firstdataglobalgateway_write>
         <firstdataglobalgateway_read>
            <connection>
               <use>core_read</use>
            </connection>
         </firstdataglobalgateway_read>
      </resources>
   </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Firstdataglobalgateway>
                    <files>
                        <default>Mage_Firstdataglobalgateway.csv</default>
                    </files>
                </Mage_Firstdataglobalgateway>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Mage_Firstdataglobalgateway>
                    <files>
                        <default>Mage_Firstdataglobalgateway.csv</default>
                    </files>
                </Mage_Firstdataglobalgateway>              
            </modules>
        </translate>
    </frontend>
    <default>
        <payment>
            <firstdataglobalgateway>
                <active>0</active>
                <cctypes>AE,VI,MC,DI</cctypes>
                <debug>0</debug>
				<test>1</test>
				<useccv>1</useccv>
				<order_status>1</order_status>
                <merchant_email></merchant_email>
                <model>firstdataglobalgateway/firstdataglobalgateway</model>
                <payment_action>authorize</payment_action>
                <title>Credit Card (Firstdata Global Gateway)</title>
                <allowspecific>0</allowspecific>
            </firstdataglobalgateway>
        </payment>
    </default>
</config>